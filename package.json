{
  "name": "talentmatcher",
  "version": "1.0.0",
  "description": "TalentMatcher - AI-powered resume and job description compatibility analyzer built with Next.js, Material UI, and Gemini API.",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "clean": "npx rimraf node_modules package-lock.json",
    "clean:install": "npx rimraf node_modules package-lock.json && npm install",
    "lint": "eslint src --max-warnings 15",
    "lint:fix": "prettier --write \"src/**/*.{ts,tsx,json,md}\" && eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "language:sort": "node scripts/sort-messages.mjs"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^3.10.0",
    "@mui/icons-material": "^6.4.4",
    "@mui/material": "^6.4.4",
    "axios": "^1.7.9",
    "docx": "^9.1.1",
    "file-saver": "^2.0.5",
    "jspdf": "^4.1.0",
    "mammoth": "^1.9.0",
    "next": "^15.1.7",
    "pdfjs-dist": "^4.10.38",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-intl": "^7.1.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "typescript-eslint": "^8.24.0",
    "@next/eslint-plugin-next": "^15.1.7",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "minimatch": "^10.0.1",
    "dompurify": "^3.2.4"
  },
  "lint-staged": {
    "src/**/!(messages).{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/locales/messages.ts": [
      "node scripts/sort-messages.mjs",
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "bash -c 'npm run type-check'"
    ]
  }
}